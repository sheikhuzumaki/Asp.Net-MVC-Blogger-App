@using Assignment_5.Models;
<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>User DashBoard</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" href="/AdminCont/Index">Home</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/AdminDashBoard/AddUser">Add User</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/CAccount/LogIn">Log Out</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <br />

        

        @foreach (var user in (List<CAccount>)ViewData["users"])
        {
    <div class="container row border">

        <div class="col-md-2">
            <img class="rounded-circle" src="~/Content/Images/@user.pic" width="200" ; height="200" />
        </div>
        <div class="col-md-10">
            <h4>Name :  @user.fname</h4>
            <h5>User Name :  @user.uname</h5>
            <h5>Email :  @user.email</h5>

            <ul class="list-inline">
                <li class="list-inline-item"><a href="/AdminDashBoard/Edit/@user.id" class="btn btn-sm btn-success">Edit</a></li>
                <li class="list-inline-item"><a href="/AdminDashBoard/Delete/@user.id" class="btn btn-sm btn-danger">Delete</a></li>
            </ul>
        </div>

    </div>
        <br />

        }
    </div>


</body>
</html>