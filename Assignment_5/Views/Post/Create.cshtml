<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Create Post</title>

    <script type="text/javascript" language="javascript">
	function validate() {
		const errorElements = document.getElementsByClassName('error');
		for(var i = 0; i < errorElements.length; i++) {
			errorElements[i].innerHTML = '';
		}
	if(document.form.title.value == ""){
		document.getElementsByClassName('error')[0].innerHTML = 'Enter Title' ;
		return false ;
	}

	if(document.form.body.value == ""){
		document.getElementsByClassName('error')[1].innerHTML = 'Enter Content' ;
		return false ;
	}


}

    </script>
   
</head>
<body>
    <nav class="navbar navbar-default bg-dark text-white">
        <div class="container-fluid">
            <h1>Create Post</h1>
            <a class="btn btn-success float-right" href="/UserDashBoard/Index">Back</a>
        </div>
    </nav>
    <div class="container">
        <div class="container ">
            <form name="form" onsubmit="return validate()" action="/Post/CreateForm" method="post">
                <div class="form-group">
                    <label class="col-form-label-lg">Title</label>
                    <input type="text" name="title" class="form-control">
                    <span style="color: red" class="error"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label-lg">Post</label>
                    <textarea class="form-control" type="text" name="body"></textarea>
                    <span style="color: red" class="error"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="hidden" name="user_id" value="@Model" />
                    <input type="submit" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>


</body>
</html>